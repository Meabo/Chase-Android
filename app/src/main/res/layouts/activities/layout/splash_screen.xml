<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:background="@drawable/splash_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/splashscreen_facebook_login_button"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            fancy:fb_defaultColor="#00ffffff"
            fancy:fb_focusColor="#5474b8"
            fancy:fb_fontIconResource="&#xf082;"
            fancy:fb_fontIconSize="16dp"
            fancy:fb_iconPaddingRight="10dp"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="5dp"
            fancy:fb_text="Login with Facebook"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="16sp"
            fancy:layout_constraintBottom_toBottomOf="parent"
            fancy:layout_constraintLeft_toLeftOf="parent"
            fancy:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" />

</android.support.constraint.ConstraintLayout>
